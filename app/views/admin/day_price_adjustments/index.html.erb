<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Pricing Manager</h1>
  </div>

  <div class="flex flex-col w-full overlow-x-auto sm:mx-0.5 lg:mx-0.5">
    <div class="py-2 inline-block min-w-full">
      <div class="overlow-x-auto">
        <table class="min-w-full table-fixed overflow-x-scroll">
          <thead class="bg-white border-b">
            <tr>
              <th scope="col" class="w-1/2 text-sm font-medium text-gray-800 px-6 py-4 text-left">Day of Week</th>
              <th scope="col" class="w-1/2 text-sm font-medium text-gray-800 px-6 py-4 text-left">Price</th>
              <th scope="col" class="w-1/8 text-sm font-medium text-gray-800 px-6 py-4 text-left">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @admin_day_price_adjustments.each do |day| %>
              <tr class="bg-gray-50 border-b">
                <td class="px-6 py-4 text-sm font-medium text-gray-800"><%= day.day_of_week.capitalize %></td>
                <td class="px-6 py-4 text-sm font-medium text-gray-800"><%= day.price_adjustment%></td>
                <td class="px-6 py-4 text-sm font-medium text-gray-800">
                  <%= link_to "Edit", edit_admin_day_price_adjustment_path(day), class: "mr-2 rounded-lg py-3 px-5 inline-block font-medium", style: "background-color: #3b606f; color: #e4ebe8;" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>