<div id="<%= dom_id booking %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Start Date:</strong>
    <%= booking.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End Date:</strong>
    <%= booking.end_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Room Type:</strong>
    <%= booking.room_type.titleize %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total Cost:</strong>
    <%= booking.total_cost %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= booking.status.capitalize %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this booking", [:admin, booking], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this booking", edit_admin_booking_path(booking), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>

</div>
