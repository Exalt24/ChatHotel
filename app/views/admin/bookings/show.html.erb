<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_booking %>

  <div class="flex justify-between mt-4 my-5">
      <%= link_to "Back to bookings", admin_bookings_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      
      <div class="flex ml-4">
        <% if @admin_booking.status == "confirmed" %>
        <%= button_to "Cancel Booking", toggle_status_admin_booking_path(@admin_booking), method: :patch, class: "mr-2 rounded-lg py-3 px-5 inline-block font-medium", style: "background-color: #3b606f; color: #e4ebe8;" %>
        <% elsif @admin_booking.status == "cancelled" %>
           <%= button_to "Reconfirm Booking", toggle_status_admin_booking_path(@admin_booking), method: :patch, class: "mr-2 rounded-lg py-3 px-5 inline-block font-medium", style: "background-color: #3b606f; color: #e4ebe8;" %>
        <% end %>
        <%= button_to "Delete this booking", admin_booking_path(@admin_booking), method: :delete, class: "rounded-lg py-3 px-5 font-medium cursor-pointer", style: "background-color: #e4ebe8; color: #3b606f;" %>
    
      </div>
    </div>

  </div>
</div>
