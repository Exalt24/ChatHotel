 
<% if flash[:success] %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4 mt-4 ml-4 mr-4" role="alert">
    <span class="block sm:inline"><%= flash[:success] %></span>
  </div>
<% elsif flash[:error] %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4 mt-4 ml-4 mr-4" role="alert">
    <span class="block sm:inline"><%= flash[:error] %></span>
  </div>
<% end %>

<% if @user.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4 mt-4 ml-4 mr-4" role="alert">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  
  <h1 class="text-3xl font-bold text-center mb-8 mt-8 text-white">Sign Up</h1>
<div class="bg-gray-800 flex justify-center mb-8">
  <div class="w-full max-w-md">
    
     <%= form_for(@user, url: users_path, html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4", multipart: true }) do |form| %>
      <div class="mb-4">
        <%= form.label :first_name, "First Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :first_name, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :last_name, "Last Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :last_name, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :email, "Email", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.email_field :email, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :mobile_number, "Mobile Number", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :mobile_number, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <%= form.label :password, "Password", class: "block text-gray-700 text-sm font-bold mb-2 mr-2" %>
      <div class="mb-4 flex items-center gap-2">  
        <%= form.password_field :password, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", id: "user_password" %>
        <span class="toggle-password cursor-pointer">
          <i class="fas fa-eye text-gray-500"></i>
        </span>
      </div>

      <%= form.label :password_confirmation, "Confirm Password", class: "block text-gray-700 text-sm font-bold mb-2 mr-2" %>
      <div class="mb-6 flex items-center gap-2">
        <%= form.password_field :password_confirmation, required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", id: "user_password_confirmation" %>
        <span class="toggle-password-confirmation cursor-pointer">
          <i class="fas fa-eye text-gray-500"></i>
        </span>
      </div>


      <div class="flex items-center justify-between">
        <%= form.submit 'Sign Up', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-sm text-white">
      Do you have an account? <%= link_to "Login", login_path, class: "text-blue-500 hover:text-blue-800" %>
    </p>
  </div>
</div>
</div>

<script>
 $(document).ready(function() {
  // Toggle password visibility for 'Password' field
  $('.toggle-password').click(function() {
    var passwordField = $('#user_password');
    var fieldType = passwordField.attr('type');
    
    if (fieldType === 'password') {
      passwordField.attr('type', 'text');
    } else {
      passwordField.attr('type', 'password');
    }
  });

  // Toggle password visibility for 'Confirm Password' field
  $('.toggle-password-confirmation').click(function() {
    var passwordConfirmField = $('#user_password_confirmation');
    var fieldType = passwordConfirmField.attr('type');
    
    if (fieldType === 'password') {
      passwordConfirmField.attr('type', 'text');
    } else {
      passwordConfirmField.attr('type', 'password');
    }
  });
});

</script>